<% unless @profile.blank? %>
<h1><%= @lectures.first.course.title %>  Course </h1>
<p>Lectures</p>
<%end%>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Download Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%= raw(lecture.content) %></td>
        <td><%= link_to "Download Lecture", lecture.attachment_url %></td>
        <td><%= link_to 'Show',[lecture.course, lecture] %></td>
        <td><%= link_to 'Edit', edit_course_lecture_path(lecture.course,lecture) %></td>
        <td><%= link_to 'Destroy', [lecture.course, lecture], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lecture',new_course_lecture_path %>
